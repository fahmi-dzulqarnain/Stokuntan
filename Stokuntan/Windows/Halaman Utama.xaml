                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="panelTransaksi" Orientation="Vertical" Margin="40 90 40 40" Visibility="Collapsed">
                            <Grid HorizontalAlignment="Left">
                                <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                                <TextBlock Text="Tanggal" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                                <DatePicker x:Name="txtBoxTglTransaksi"
                                    Margin="170 0 0 0"
                                    HorizontalAlignment="Left"
                                    Width="130"  Foreground="Black"/>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                                <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                                <TextBlock Text="Deskripsi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                                <TextBox x:Name="txtBoxKetTransaksi" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" 
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13"/>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                                <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                                <TextBlock Text="Jenis Transaksi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                                <ComboBox x:Name="cmbBoxJenisTransaksi" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" HorizontalAlignment="Left"
                                  ItemsSource="{Binding FieldTotal}" 
                                  VerticalAlignment="Bottom" FontSize="13"/>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                                <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09" Grid.ColumnSpan="2"/>
                                <TextBlock Text="Nilai (Rp)" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15,11,0,11" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="txtBoxNilaiTransaksi" Foreground="Black"
                                  Width="150" Margin="170 0 0 0" 
                                     TextChanged="TxtBoxNilaiTransaksi_TextChanged"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13" Grid.Column="1"/>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                                <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                                <TextBlock Text="Metode Transaksi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                                <ComboBox x:Name="cmbBoxMetodeTransaksi" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" HorizontalAlignment="Left"
                                  ItemsSource="{Binding Metode}" materialDesign:HintAssist.Hint="Opsional"
                                  VerticalAlignment="Bottom" FontSize="13"/>
                            </Grid>
                        </StackPanel>

                        <Button x:Name="BtnTambahBeban2" HorizontalAlignment="Right"
                            Click="BtnTambahBeban2_Click" Margin="50"
                            Background="#C46404" BorderBrush="#C46404" FontSize="13"
                            Content="Tambah Beban" FontWeight="Light"
                            VerticalAlignment="Bottom"/>
                    </Grid>
                </materialDesign:DrawerHost.RightDrawerContent>
            </materialDesign:DrawerHost>
        </Grid>
    </Grid>
</Window>