<Window x:Class="Stokuntan.Windows.Halaman_Utama"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        Height="720" Width="1280" Background="WhiteSmoke"
        WindowStyle="None" BorderThickness="0" MinWidth="1180" MinHeight="640"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        mc:Ignorable="d" Title="Halaman Utama">
    <Window.Resources>
        <Storyboard x:Key="TambahOpen">
            <DoubleAnimationUsingKeyFrames 
                Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="440">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="TambahClose">
            <DoubleAnimationUsingKeyFrames 
                Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="440"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="JualOpen">
            <DoubleAnimationUsingKeyFrames 
                Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="{Binding ScreenWidth}"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="JualClose">
            <DoubleAnimationUsingKeyFrames 
                Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="{Binding ScreenWidth}"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="fadeIn">
            <ObjectAnimationUsingKeyFrames BeginTime="0:0:0" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation BeginTime="0:0:0.0" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="fadeOut">
            <ObjectAnimationUsingKeyFrames BeginTime="0:0:0" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation BeginTime="0:0:0" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Expander 
                            x:Name="exp" IsExpanded="False"
                            Background="White" Foreground="Black">
                            <Expander.Header>
                                <TextBlock Text="{Binding Name}"/>
                            </Expander.Header>
                            <ItemsPresenter />
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid x:Name="GridHeaderMenu" Height="40"
              VerticalAlignment="Top"
              Background="#642B09" Grid.ColumnSpan="2">

            <TextBlock Text="APLIKASI STOKUNTAN"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Foreground="White"
                       FontSize="13" FontWeight="SemiBold"
                       FontFamily="Segoe UI" Margin="20 0 0 0"/>

            <StackPanel Orientation="Horizontal"
                        Margin="400 0 0 0">

                <Grid x:Name="BtnBeranda" Cursor="Hand"
                      Background="#865840" Width="120"
                      MouseDown="BtnBeranda_MouseDown">
                    <TextBlock
                        Text="BERANDA"
                        FontSize="12" FontWeight="Regular"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>

                <Grid x:Name="BtnPembelian" Cursor="Hand"
                      Width="120" MouseDown="BtnPembelian_MouseDown">
                    <TextBlock
                        Text="PEMBELIAN"
                        FontSize="12" FontWeight="Regular"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>

                <Grid x:Name="BtnStok" Cursor="Hand" 
                      Width="120" MouseDown="BtnStok_MouseDown">
                    <TextBlock
                        Text="STOK"
                        FontSize="12" FontWeight="Regular"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>

                <Grid x:Name="BtnPenjualan" Cursor="Hand" 
                      Width="120" MouseDown="BtnPenjualan_MouseDown">
                    <TextBlock
                        x:Name="txtMenuBarcode"
                        Text="PENJUALAN"
                        FontSize="12" FontWeight="Regular"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>

                <Grid x:Name="BtnTransaksi" Cursor="Hand" 
                      Width="120" MouseDown="BtnTransaksi_MouseDown">
                    <TextBlock
                        x:Name="txtMenuTransaksi"
                        Text="TRANSAKSI LAIN"
                        FontSize="12" FontWeight="Regular"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>

                <Grid x:Name="BtnLaporan" Cursor="Hand" 
                      Width="120" MouseDown="BtnLaporan_MouseDown">
                    <TextBlock
                        Text="LAPORAN"
                        FontSize="12" FontWeight="Regular"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </Grid>

            </StackPanel>

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button x:Name="minimizeButton"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="MinimizeButton_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="White"/>
                </Button>

                <Button x:Name="normalizeButton"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="NormalizeButton_Click">
                    <materialDesign:PackIcon x:Name="iconRestore" Kind="WindowRestore" Foreground="White"/>
                </Button>

                <Button x:Name="keluarButton"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="KeluarButton_Click">
                    <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                </Button>
            </StackPanel>

        </Grid>

        <Grid x:Name="GridBeranda" Margin="0 40 0 0"
              Visibility="Collapsed">
            <Grid x:Name="GridProfil" Margin="20"
                  HorizontalAlignment="Left">
                <Rectangle Width="210" RadiusX="10" RadiusY="10" 
                           Stroke="DarkGray"/>
                <StackPanel Orientation="Vertical"  Margin="20 40 ">
                    <Image Source="/Images/logo.png" Width="130" Height="130"
                       VerticalAlignment="Top"/>
                    <TextBlock Text="Nama Usaha" FontWeight="SemiBold" TextAlignment="Center" Margin="0 20 0 0"/>
                    <TextBlock x:Name="txtNamaUsaha" Text="CV. Lorem Ipsum Dolor" FontSize="18" 
                               TextWrapping="Wrap" Width="165" TextAlignment="Center" Margin="0 10 0 0"/>
                    <TextBlock Text="Alamat Usaha" FontWeight="SemiBold" TextAlignment="Center" Margin="0 25 0 0"/>
                    <TextBlock x:Name="txtAlamat" Text="CV. Lorem Ipsum Dolor" FontSize="15" 
                               TextWrapping="Wrap" Width="165" TextAlignment="Center" Margin="0 10 0 0"/>
                    <TextBlock Text="Kontak Usaha" FontWeight="SemiBold" TextAlignment="Center" Margin="0 25 0 0"/>
                    <TextBlock x:Name="txtKontakUsaha" Text="CV. Lorem Ipsum Dolor" FontSize="15" 
                               TextWrapping="Wrap" Width="165" TextAlignment="Center" Margin="0 10 0 0"/>
                </StackPanel>
                
            </Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="280 20 0 0">
                <Grid Background="#FFCCBC" Width="250" Height="100">
                    <materialDesign:PackIcon Kind="Money" Width="25" Height="25" Margin="10 10 0 0"/>
                    <TextBlock Text="Saldo Kas" FontSize="13" Margin="40 13 0 0" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSaldoKas" Text="Rp0,00" FontSize="30" Margin="15 0 15 15" VerticalAlignment="Bottom"
                               HorizontalAlignment="Right" Foreground="#3E2723"/>
                </Grid>
                <Grid Background="#FFE0B2" Width="250" Height="100">
                    <materialDesign:PackIcon Kind="Money" Width="25" Height="25" Margin="10 10 0 0" Foreground="#b71c1c"/>
                    <TextBlock Text="Saldo Utang" FontSize="13" Margin="40 13 0 0" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSaldoUtang" Text="Rp0,00" FontSize="30" Margin="15 0 15 15" VerticalAlignment="Bottom"
                               HorizontalAlignment="Right" Foreground="#3E2723"/>
                </Grid>
                <Grid Background="#FFECB3" Width="250" Height="100">
                    <materialDesign:PackIcon Kind="MoneyOff" Width="25" Height="25" Margin="10 10 0 0" />
                    <TextBlock Text="Saldo Piutang" FontSize="13" Margin="40 13 0 0" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSaldoPiutang" Text="Rp0,00" FontSize="30" Margin="15 0 15 15" VerticalAlignment="Bottom"
                               HorizontalAlignment="Right" Foreground="#3E2723"/>
                </Grid>
            </StackPanel>
        </Grid>

        <Grid x:Name="GridPembelian" Margin="0 40 0 0"
              Visibility="Collapsed">
            <Grid x:Name="GridMenu" Height="70"
                      VerticalAlignment="Top"
                      Background="#F2CF9D">

                <StackPanel Orientation="Horizontal" Margin="30 0 0 0">
                    <Button x:Name="BtnTambahPembelian"
                            VerticalAlignment="Center" Height="30"
                            BorderBrush="#C46404" Background="#C46404"
                            Click="BtnTambahPembelian_Click"
                            materialDesign:ButtonAssist.CornerRadius="15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Add" Foreground="White"
                                                         VerticalAlignment="Center"/>
                            <TextBlock Text="Tambah Pembelian" Foreground="White"
                                           FontSize="11" FontWeight="Regular" 
                                           Margin="5 -1 0 0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnUbahPembelian" Margin="20 0 0 0" 
                            VerticalAlignment="Center" Height="30"
                            BorderBrush="#C46404" Background="#C46404"
                            Click="BtnUbahPembelian_Click"
                            materialDesign:ButtonAssist.CornerRadius="15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Edit" Foreground="White"
                                                         VerticalAlignment="Center"/>
                            <TextBlock Text="Ubah Pembelian" Foreground="White"
                                       FontSize="11" FontWeight="Regular" 
                                       Margin="5 -1 0 0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnHapusPembelian" Margin="20 0 0 0" 
                            VerticalAlignment="Center" Height="30"
                            BorderBrush="#C46404" Background="#C46404"
                            Click="BtnHapusPembelian_Click"
                            materialDesign:ButtonAssist.CornerRadius="15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Trash" Foreground="White"
                                                         VerticalAlignment="Center"/>
                            <TextBlock Text="Hapus Pembelian" Foreground="White"
                                           FontSize="11" FontWeight="Regular" 
                                           Margin="5 -1 0 0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>

                <ComboBox x:Name="cmbBoxKategoriCari"
                          materialDesign:HintAssist.Hint="Kategori Pencarian..."
                          IsReadOnly="False" HorizontalAlignment="Right" Margin="0 0 230 0"
                          Foreground="Black" Width="140" IsTextSearchEnabled="True"
                          ItemsSource="{Binding KategoriCari}"/>

                <Grid HorizontalAlignment="Right" Margin="10,0,30,0">
                    <Rectangle Width="170" Height="25" RadiusX="12" RadiusY="12" Stroke="#FF7C7C7C"/>
                    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                        <materialDesign:PackIcon Kind="Search" Foreground="Black"
                                                     VerticalAlignment="Center"/>
                        <TextBox x:Name="txtBoxCariPembelian"
                                 KeyUp="TxtBoxCariPembelian_KeyUp"
                                 VerticalAlignment="Center" BorderThickness="0"
                                 Width="120" Margin="5,0,0,0" Foreground="Black"
                                 materialDesign:HintAssist.Hint="Cari Pembelian..."/>
                    </StackPanel>
                </Grid>

            </Grid>

            <Grid Margin="20,90,20,20">
                <DataGrid x:Name="TablePembelian" AutoGenerateColumns="False"
                          HeadersVisibility="Column" CanUserResizeRows="False" 
                          CanUserAddRows="False" GridLinesVisibility="Horizontal" 
                          Background="WhiteSmoke" IsReadOnly="True"
                          CanUserReorderColumns="False" FontSize="12">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="35"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="15 0 0 0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="Width" Value="Auto"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <StackPanel x:Name="NoDataPembelian" Orientation="Vertical"
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/add_first_data.png" Width="170"/>
                    <TextBlock Text="Tambahkan Data Pembelian"
                               Foreground="Black" Margin="0 20 0 0"
                               FontSize="16" FontFamily="Segoe UI Semibold Italic"/>
                    <TextBlock Text="Sepertinya Anda Belum Menambahkan Data Pembelian"
                               Foreground="Black" Margin="0 10 0 0" Width="190"
                               TextWrapping="Wrap" TextAlignment="Center"
                               FontSize="14" FontFamily="Segoe UI Semilight"/>
                </StackPanel>
            </Grid>

            <Grid x:Name="GridTambahPembelian" Visibility="Collapsed"
                  HorizontalAlignment="Right" Width="0"
                  Background="WhiteSmoke">

                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <Button x:Name="CloseTambahBeli" 
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}" Width="50"
                                Height="30" Margin="20 9 0 10"
                                Click="CloseTambahButton_Click">
                        <materialDesign:PackIcon
                                Foreground="Black"
                                Kind="ArrowBack"
                                Width="20" Height="20"/>
                    </Button>
                    <TextBlock x:Name="txtTitle" Text="Tambah Pembelian" 
                                   Foreground="Black"
                               VerticalAlignment="Top" FontSize="16"
                               FontFamily="Segoe UI Semibold" Margin="12"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="40 90 40 40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <DatePicker 
                                x:Name="txtBoxTglMasuk"
                                Margin="10 0 0 0" HorizontalAlignment="Left"
                                Width="130" Foreground="Black"
                                materialDesign:HintAssist.Hint="Tanggal Masuk"/>

                        <TextBox 
                                x:Name="txtBoxRefNota" Foreground="Black"
                                Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                Width="130" Margin="25 0 0 0" VerticalAlignment="Center"
                                FontSize="12" materialDesign:HintAssist.Hint="Ref. / No. Nota"/>

                        <ComboBox 
                                x:Name="cmbBoxSupplier" Foreground="Black"
                                Width="160" Margin="25 0 0 0" HorizontalAlignment="Left"
                                ItemsSource="{Binding Supplier}" materialDesign:HintAssist.Hint="Supplier"
                                VerticalAlignment="Bottom" FontSize="12"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                SelectionChanged="CmbBoxCustomer_SelectionChanged"/>
                        <Button 
                                x:Name="BtnAddSupplier" Background="#C46404"
                                BorderBrush="#C46404" Margin="10 0"
                                Click="BtnAddSupplier_Click" Width="25" Height="25"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon 
                                    Kind="Add" Foreground="White"
                                    Width="15" Height="15"/>
                        </Button>

                        <ComboBox 
                                x:Name="cmbBoxLokasi" Foreground="Black"
                                Width="160" Margin="25 0 0 0" ItemsSource="{Binding Lokasi}"
                                VerticalAlignment="Bottom" FontSize="12" HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                materialDesign:HintAssist.Hint="Lokasi Penyimpanan"/>
                        <Button 
                                x:Name="BtnAddLocation" Background="#C46404"
                                BorderBrush="#C46404" Margin="10 0 0 0"
                                Click="BtnAddLocation_Click" Width="25" Height="25"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon 
                                    Kind="Add" Foreground="White"
                                    Width="15" Height="15"/>
                        </Button>
                    </StackPanel>

                    <Rectangle Fill="DarkGray" Height="1" Margin="0 20 0 15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <ComboBox 
                                x:Name="cmbBoxKategori"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                Width="155" ItemsSource="{Binding Kategori}" FontSize="12">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                            Kind="BoxVariant"
                                            VerticalAlignment="Center"/>
                                    <TextBlock 
                                            Text="Kategori Barang" FontSize="12"
                                            Foreground="Black" VerticalAlignment="Center"
                                            Margin="5 0 0 0"/>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </ComboBox>
                        <Button 
                                x:Name="BtnAddKategori" Background="#C46404"
                                BorderBrush="#C46404" Margin="15 0 0 0"
                                VerticalAlignment="Center"
                                Click="BtnAddKategori_Click" Width="25" Height="25"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon 
                                    Kind="Add" Foreground="Wheat"
                                    Width="15" Height="15"/>
                        </Button>

                        <TextBox 
                                x:Name="txtBoxMerek" Foreground="Black" VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                Width="140" Margin="20 0 0 0" FontSize="12">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                            Kind="BrandingWatermark"
                                            VerticalAlignment="Center"/>
                                    <TextBlock 
                                            Text="Merek" FontSize="12"
                                            Foreground="Black" VerticalAlignment="Center"
                                            Margin="5 0 0 0"/>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>

                        <TextBox 
                                x:Name="txtBoxJumlahStok" Foreground="Black" VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                Width="120" Margin="20 0 0 0" FontSize="12">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                            Kind="Counter"
                                            VerticalAlignment="Center"/>
                                    <TextBlock 
                                            Text="Jumlah Beli" FontSize="12"
                                            Foreground="Black" VerticalAlignment="Center"
                                            Margin="5 0 0 0"/>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>

                        <ComboBox 
                                x:Name="cmbBoxSatuan" Foreground="Black"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                Width="120" Margin="20 0 0 0"
                                ItemsSource="{Binding Satuan}" FontSize="12">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                            Kind="DivingFlippers"
                                            VerticalAlignment="Center"/>
                                    <TextBlock 
                                            Text="Satuan" FontSize="12"
                                            Foreground="Black" VerticalAlignment="Center"
                                            Margin="5 0 0 0"/>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </ComboBox>
                        <Button 
                                x:Name="BtnAddSatuan" Background="#C46404"
                                BorderBrush="#C46404" Margin="15 0 0 0"
                                Click="BtnAddSatuan_Click" Width="25" Height="25"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon 
                                    Kind="Add" Foreground="White"
                                    Width="15" Height="15"/>
                        </Button>

                        <TextBox 
                                x:Name="txtBoxHargaBeli" Foreground="Black"
                                Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                Width="135" Margin="20 0 0 0" VerticalAlignment="Center"
                                TextChanged="TxtBoxHargaBeli_TextChanged" FontSize="12">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                            Kind="PointOfSale"
                                            VerticalAlignment="Center"/>
                                    <TextBlock 
                                            Text="Harga Satuan" FontSize="12"
                                            Foreground="Black" VerticalAlignment="Center"
                                            Margin="5 0 0 0"/>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>

                        <TextBox 
                                x:Name="txtBoxHargaJual" Foreground="Black"
                                Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                Width="120" Margin="20 0 0 0" FontSize="13" VerticalAlignment="Center"
                                TextChanged="TxtBoxHargaJual_TextChanged">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon 
                                            Kind="CalculatorVariant"
                                            VerticalAlignment="Center"/>
                                    <TextBlock 
                                            Text="Harga Jual" FontSize="12"
                                            Foreground="Black" VerticalAlignment="Center"
                                            Margin="5 0 0 0"/>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>
                        <materialDesign:PackIcon
                                Kind="Divide" Width="20" Height="20"
                                VerticalAlignment="Center"/>
                        <ComboBox 
                                x:Name="cmbBoxSatuanJual" Foreground="Black"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                Width="80" ItemsSource="{Binding Satuan}" 
                                FontSize="12" materialDesign:HintAssist.Hint="Satuan"/>

                        <Button
                                x:Name="btnAddItem_Beli" FontSize="12"
                                Click="BtnAddItem_Beli_Click" Margin="30 0 0 0"
                                Background="#C46404" BorderBrush="#C46404"
                                materialDesign:ButtonAssist.CornerRadius="15"
                                Content="Tambah Item" FontWeight="Light"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="35 0 0 50"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                    <TextBlock Text="Total Harga" FontSize="14"
                                   Foreground="#2f2f2f" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalHargaBeli" Text="Rp0,00" FontSize="14" FontWeight="Medium"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="30 0 0 0"/>

                    <ComboBox 
                        x:Name="cmbBoxMetodeBayar" Foreground="Black"
                        Width="140" Margin="25 0 0 0" HorizontalAlignment="Left"
                        ItemsSource="{Binding Metode}" materialDesign:HintAssist.Hint="Metode Bayar"
                        VerticalAlignment="Bottom" FontSize="12"
                        SelectionChanged="CmbBoxMetodeBayar_SelectionChanged"
                        Style="{StaticResource MaterialDesignFilledComboBox}"/>

                    <materialDesign:PackIcon Kind="InfoCircle" VerticalAlignment="Center"
                                                 Margin="20 0 0 0"
                                                 ToolTip="Cicilan digunakan apabila sekarang pembayaran, dan sisanya akan dibayar lagi berikutnya (Cash dan Piutang)"/>
                    <TextBox 
                        x:Name="TxtBoxJmlhBayarBeli" TextChanged="TxtBoxJmlhBayarBeli_TextChanged"
                        Width="150" materialDesign:HintAssist.Hint="Jumlah Dibayar (Rp)" IsEnabled="False"
                        Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                        Margin="50 0 0 0" VerticalAlignment="Center"/>
                </StackPanel>

                <DataGrid 
                        x:Name="TableTambahPembelian" AutoGenerateColumns="False"
                        HeadersVisibility="Column" CanUserResizeRows="False" 
                        CanUserAddRows="False" GridLinesVisibility="All" 
                        Background="WhiteSmoke" IsReadOnly="True" Margin="40 250 40 120"
                        CanUserReorderColumns="False" FontSize="12">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="40"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="15 0 0 0"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Background" Value="WhiteSmoke"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="Width" Value="Auto"/>
