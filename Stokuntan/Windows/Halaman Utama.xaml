                          CanUserAddRows="False" GridLinesVisibility="Horizontal" 
                          Background="White" IsReadOnly="True" Margin="40 220 40 100"
                          CanUserReorderColumns="False" FontSize="12">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="40"/>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="15 0 0 0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>

                            <DataGridTemplateColumn x:Key="BtnHapusJual" Header="" MinWidth="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                    x:Name="BtnHapusItemJual"
                                    Content="Hapus" Height="23"
                                    Click="BtnHapusItemJual_Click"
                                    FontFamily="Segoe UI Semilight" FontSize="9"
                                    Foreground="#fff"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Resources>
                    </DataGrid>
                </Grid>

            </Grid>
        </Grid>

        <Grid x:Name="GridLaporan" Margin="0 40 0 0"
              Visibility="Collapsed">
            <Grid x:Name="GridMenuLaporan" Height="70"
                      VerticalAlignment="Top"
                      Background="#F2CF9D">

                <StackPanel Orientation="Horizontal" Margin="30 0 0 0">
                    <Button x:Name="BtnTambahBeban" Margin="-15 0 0 0" 
                                VerticalAlignment="Center" Height="40"
                                BorderBrush="Transparent" Background="Transparent"
                                Click="BtnTambahBeban_Click">
                        <Grid>
                            <Border Background="#C46404" CornerRadius="15"
                                    Height="30" Width="145"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Weights" Foreground="White"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Tambah Beban" Foreground="White"
                                           FontSize="11" FontWeight="Regular" 
                                           Margin="5 -1 0 0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                    </Button>

                    <Button x:Name="BtnTambahTransaksi" Margin="-15 0 0 0" 
                                VerticalAlignment="Center" Height="40"
                                BorderBrush="Transparent" Background="Transparent"
                                Click="BtnTambahTransaksi_Click">
                        <Grid>
                            <Border Background="#C46404" CornerRadius="15"
                                    Height="30" Width="145"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Money100" Foreground="White"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Tambah Transaksi" Foreground="White"
                                           FontSize="11" FontWeight="Regular" 
                                           Margin="5 -1 0 0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                    </Button>

                    <!--<Button x:Name="BtnTampilanTabelPenjualan" Margin="-15 0 0 0" 
                                VerticalAlignment="Center" Height="40"
                                BorderBrush="Transparent" Background="Transparent"
                                Click="BtnTampilanTabelPenjualan_Click">
                        <Grid>
                            <Border Background="#C46404" CornerRadius="15"
                                    Height="30" Width="125"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Menu" Foreground="White"
                                                             VerticalAlignment="Center"/>
                                <TextBlock Text="Tampilan Tabel" Foreground="White"
                                               FontSize="11" FontWeight="Regular" Margin="5 -1 0 0"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                    </Button>-->

                    <!--<Button x:Name="BtnEksporExcel" Margin="-15 0 0 0" 
                                VerticalAlignment="Center" Height="40"
                                BorderBrush="Transparent" Background="Transparent"
                                Click="BtnEksporExcel_Click">
                        <Grid>
                            <Border x:Name="recEksporExcel"  
                                        Background="#C46404" CornerRadius="15"
                                        Height="30" Width="125"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FileExcel" Foreground="White"
                                                             VerticalAlignment="Center"/>
                                <TextBlock Text="Ekspor Excel" Foreground="White"
                                               FontSize="11" FontWeight="Regular" Margin="5 -1 0 0"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                    </Button>-->
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 15 0">
                    <ComboBox x:Name="cmbBoxBulanLaporan" materialDesign:HintAssist.Hint="Pilih Bulan..."
                             VerticalAlignment="Center" MinWidth="150" ItemsSource="{Binding Bulan}"/>
                    <Button x:Name="BtnTampilkanLaporan" 
                            VerticalAlignment="Center" Height="40"
                            BorderBrush="Transparent" Background="Transparent"
                            Click="BtnTampilkanLaporan_Click">
                        <Grid>
                            <Border Background="#C46404" CornerRadius="15"
                                    Height="30" Width="200"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="DriveDocument" Foreground="White"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Tampilkan Laporan Laba Rugi" Foreground="White"
                                           FontSize="11" FontWeight="Regular" 
                                           Margin="5 -1 0 0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                    </Button>
                </StackPanel>

            </Grid>

            <Grid Margin="20,90,20,20">
                <FlowDocumentScrollViewer x:Name="fdViewer" Visibility="Collapsed" Margin="20"/>

                <StackPanel x:Name="NoDataLaporanSelected" Orientation="Vertical"
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/Compare.png" Width="130"/>
                    <TextBlock Text="Laporan Belum Dipilih!" TextAlignment="Center"
                               Foreground="Black" Margin="0 20 0 0"
                               FontSize="16" FontFamily="Segoe UI Semibold Italic"/>
                    <TextBlock Text="Untuk menampilkan laporan, Pilih Parameter Laporan Laba Rugi"
                               Foreground="Black" Margin="0 10 0 0" Width="240"
                               TextWrapping="Wrap" TextAlignment="Center"
                               FontSize="13" FontFamily="Segoe UI Semilight"/>
                </StackPanel>
            </Grid>

            <!--<ProgressBar x:Name="progressLaporan" IsIndeterminate="True" 
                             VerticalAlignment="Top" Height="8" Margin="0,70,0,0" Visibility="Collapsed"/>-->
            
            <Grid x:Name="GridTambahBebTrak" Visibility="Visible"
                  HorizontalAlignment="Right" Width="0"
                  Background="Transparent">

                <Grid.Effect>
                    <DropShadowEffect BlurRadius="15" Direction="-80" Opacity="0.31" ShadowDepth="3" />
                </Grid.Effect>

                <Grid Background="White"
                      VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                        <Button x:Name="CloseTambahBebTrak" 
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}" Width="50"
                                Height="30" Margin="20 9 0 10"
                                Click="CloseTambahBebTrak_Click">
                            <materialDesign:PackIcon
                                Foreground="Black"
                                Kind="ArrowBack"
                                Width="20" Height="20"/>
                        </Button>
                        <TextBlock x:Name="txtTitleBebTrak" Text="Tambah Beban" 
                                   Foreground="Black"
                               VerticalAlignment="Top" FontSize="16"
                               FontFamily="Segoe UI Semibold" Margin="12"/>
                    </StackPanel>

                    <StackPanel x:Name="panelBeban" Orientation="Vertical" Margin="40 90 40 40" Visibility="Visible">
                        <Grid HorizontalAlignment="Left">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Tanggal" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <DatePicker x:Name="txtBoxTglBeban"
                                    Margin="170 0 0 0"
                                    HorizontalAlignment="Left"
                                    Width="130"  Foreground="Black"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Deskripsi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <TextBox x:Name="txtBoxKetBeban" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" 
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Jenis Beban" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <ComboBox x:Name="cmbBoxJenisBeban" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" HorizontalAlignment="Left"
                                  ItemsSource="{Binding JenisBeban}" 
                                  VerticalAlignment="Bottom" FontSize="13"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Nilai (Rp)" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <TextBox x:Name="txtBoxNilaiBeban" Foreground="Black"
                                  Width="150" Margin="170 0 0 0" 
                                     TextChanged="TxtBoxNilaiBeban_TextChanged"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Jumlah Beban" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <TextBox x:Name="TxtBoxJumlahBeban" Foreground="Black"
                                  Width="50" Margin="170 0 0 0" 
                                     TextChanged="TxtBoxJumlahBeban_TextChanged"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Total Rugi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <TextBlock x:Name="TxtTotalBeban" Foreground="#2f2f2f"
                                  Width="130" Margin="170 0 0 0" HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13" Text="Rp0,00"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel x:Name="panelTransaksi" Orientation="Vertical" Margin="40 90 40 40" Visibility="Collapsed">
                        <Grid HorizontalAlignment="Left">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Tanggal" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <DatePicker x:Name="txtBoxTglTransaksi"
                                    Margin="170 0 0 0"
                                    HorizontalAlignment="Left"
                                    Width="130"  Foreground="Black"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Deskripsi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <TextBox x:Name="txtBoxKetTransaksi" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" 
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Jenis Transaksi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <ComboBox x:Name="cmbBoxJenisTransaksi" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" HorizontalAlignment="Left"
                                  ItemsSource="{Binding FieldTotal}" 
                                  VerticalAlignment="Bottom" FontSize="13"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09" Grid.ColumnSpan="2"/>
                            <TextBlock Text="Nilai (Rp)" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15,11,0,11" Grid.ColumnSpan="2"/>
                            <TextBox x:Name="txtBoxNilaiTransaksi" Foreground="Black"
                                  Width="150" Margin="170 0 0 0" 
                                     TextChanged="TxtBoxNilaiTransaksi_TextChanged"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom" FontSize="13" Grid.Column="1"/>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Margin="0 -2 0 0">
                            <Rectangle Width="150" Height="40"
                                   HorizontalAlignment="Left"
                                   Fill="#FDE7C8" Stroke="#642B09"/>
                            <TextBlock Text="Metode Transaksi" FontSize="13"
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="15 0 0 0"/>
                            <ComboBox x:Name="cmbBoxMetodeTransaksi" Foreground="Black"
                                  Width="180" Margin="170 0 0 0" HorizontalAlignment="Left"
                                  ItemsSource="{Binding Metode}" materialDesign:HintAssist.Hint="Opsional"
                                  VerticalAlignment="Bottom" FontSize="13"/>
                        </Grid>
                    </StackPanel>

                    <Button x:Name="BtnTambahBeban2" HorizontalAlignment="Right"
                            Click="BtnTambahBeban2_Click" Margin="50"
                            Background="#C46404" BorderBrush="#C46404" FontSize="13"
                            Content="Tambah Beban" FontWeight="Light"
                            VerticalAlignment="Bottom"/>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>