<Window x:Class="Parago.Windows.ProgressDialog" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Height="80" Width="240" 
        MinHeight="80" MinWidth="240" Title="" FontFamily="Segoe UI" 
        ResizeMode="CanResize" WindowStyle="None" 
        WindowStartupLocation="CenterScreen" Closing="OnClosing" 
        >
	<DockPanel Margin="10">
        <Grid DockPanel.Dock="Bottom">
            <ProgressBar x:Name="ProgressBar" Grid.Column="0" IsIndeterminate="True" Height="20" />
			<Button x:Name="CancelButton" Grid.Column="1" Margin="3,0,0,0" Width="70" Height="22" Content="Cancel" Visibility="Collapsed" HorizontalAlignment="Right" Click="OnCancelButtonClick" />
		</Grid>
		<TextBlock x:Name="TextLabel" Text="Loading..." FontSize="14" TextTrimming="CharacterEllipsis" DockPanel.Dock="Top" />
		<TextBlock x:Name="SubTextLabel" Text="..." FontStyle="Italic" Visibility="Collapsed" Margin="0,5,0,5" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
	</DockPanel>
</Window>
